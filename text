stage('Download PDF Report') {
            steps {
                script {
                    // 假设报告在 Checkmarx 服务器路径: /checkmarx/reports/
                    sh '''
                        curl -u $CX_USER:$CX_PASSWORD -o $WORKSPACE/checkmarx_report.pdf \
                        "$CX_URL/checkmarx/reports/$CX_PROJECT/report.pdf"
                    '''
                }
            }
        }